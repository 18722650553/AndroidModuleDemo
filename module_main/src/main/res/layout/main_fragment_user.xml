<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/white_light">

            <ImageView

                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="吴蜀黍"
                        android:textColor="@color/yellow" />

                    <View
                        style="@style/VerticalLine"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/yellow" />

                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="159****5315"
                        android:textColor="@color/yellow" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <com.wss.common.widget.MultipleItemView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:leftIcon="@drawable/main_icon_33"
            app:leftText="我的金币"
            app:rightText="9999"
            app:rightTextColor="@color/orange" />

        <com.wss.common.widget.MultipleItemView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:leftIcon="@drawable/main_icon_34"
            app:leftText="我的收藏"
            app:showTopLine="false" />

        <com.wss.common.widget.MultipleItemView
            android:id="@+id/miv_order"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:leftIcon="@drawable/main_icon_35"
            app:leftText="我的订单"
            app:showTopLine="false" />

        <com.wss.common.widget.MultipleItemView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:leftIcon="@drawable/main_icon_36"
            app:leftText="历史记录"
            app:showTopLine="false" />

        <com.wss.common.widget.MultipleItemView
            android:id="@+id/miv_check"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            app:leftIcon="@drawable/main_icon_32"
            app:leftText="检查更新" />

        <com.wss.common.widget.MultipleItemView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:leftIcon="@drawable/main_icon_31"
            app:leftText="关于我们"
            app:showTopLine="false" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:background="@drawable/corners_red_shape"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
