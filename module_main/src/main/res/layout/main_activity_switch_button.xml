<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.wss.module.main.ui.view.SwitchButton
        android:id="@+id/sb_01"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:sb_show_indicator="false" />

    <com.wss.module.main.ui.view.SwitchButton
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:sb_checked="true"
        app:sb_checked_color="@color/yellow" />

    <com.wss.module.main.ui.view.SwitchButton
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:sb_checked_color="@color/red"
        app:sb_effect_duration="1000" />

    <com.wss.module.main.ui.view.SwitchButton
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:sb_checked="true"
        app:sb_checked_color="@color/light_green" />

    <com.wss.module.main.ui.view.SwitchButton
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_marginTop="16dp"
        app:sb_checked_color="@color/black" />

</LinearLayout>