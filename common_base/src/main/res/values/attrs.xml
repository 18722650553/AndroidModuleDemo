<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--下拉 上拉刷新控件-->
    <declare-styleable name="PagerSlidingTabStrip">
        <!--下方 指示线条器颜色-->
        <attr name="pstsIndicatorColor" format="color" />
        <!--下方 横线颜色-->
        <attr name="pstsUnderlineColor" format="color" />
        <!--水平方向分割线颜色-->
        <attr name="pstsDividerColor" format="color" />
        <!--标题默认颜色-->
        <attr name="pstsTextDefaultColor" format="color" />
        <!--标题选中颜色-->
        <attr name="pstsTextSelectedColor" format="color" />
        <!--字体大小-->
        <attr name="pstsTextSize" format="dimension" />
        <!--是否加粗-->
        <attr name="pstsBold" format="boolean" />
        <!--是否显示顶部横线-->
        <attr name="pstsHasTopLine" format="boolean" />
        <attr name="pstsIndicatorWidth" format="dimension" />
        <!--是否显示底部横线-->
        <attr name="pstsHasBottomLine" format="boolean" />
        <!--是否绘制圆角1的矩形 指示器-->
        <attr name="pstsRoundRect" format="boolean" />

        <attr name="pstsDividerPadding" format="dimension" />
        <!--指示器高度-->
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPaddingTopBottom" format="dimension" />
        <attr name="pstsTabPaddingLeft" format="dimension" />
        <attr name="pstsTabPaddingRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsShouldExpand" format="boolean" />
        <!--所有文字是否转大写-->
        <attr name="pstsTextAllCaps" format="boolean" />
        <attr name="pstsScaleZoomMax" format="float" />
        <!--滑动是是否平滑滚动-->
        <attr name="pstsSmoothScrollWhenClickTab" format="boolean" />
    </declare-styleable>

    <!--自定义加载框-->
    <declare-styleable name="LVCircularRing">
        <attr name="bgColor" format="color" />
        <attr name="barColor" format="color" />
    </declare-styleable>

    <!--观察者按钮-->
    <declare-styleable name="ObserverButton">
        <!--默认背景-->
        <attr name="defaultBgColor" format="color|reference" />
        <attr name="defaultBgResource" format="color|reference" />
        <!--可以点击的背景-->
        <attr name="pressBgColor" format="color|reference" />
        <attr name="pressBgResource" format="color|reference" />
        <!--默认字体颜色-->
        <attr name="defaultTextColor" format="color" />
        <!--可以点击的字体颜色-->
        <attr name="pressTextColor" format="color" />
    </declare-styleable>

    <!--流式布局-->
    <declare-styleable name="FlowLayout">
        <attr name="max_select" format="integer" />
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="IconFontTextView">
        <attr name="value" format="string" />
        <attr name="valueChecked" format="string" />
        <attr name="fontFile" format="string" />
    </declare-styleable>

    <!-- 增强输入框-->
    <declare-styleable name="EnhanceEditText">
        <attr name="eTextColor" format="color" />
        <attr name="eTextSize" format="dimension" />
        <attr name="eHintText" format="string" />
        <attr name="eHintTextColor" format="color" />
        <!--输入框左侧icon-->
        <attr name="eLeftIconFont" format="string" />
        <attr name="eLeftIconColor" format="color" />
        <!--清除icon-->
        <attr name="eCleanIconFont" format="string" />
        <attr name="eCleanIconColor" format="color" />
        <!-- 搜搜框背景-->
        <attr name="eBg" format="color|dimension" />
        <!--是否显示清除按钮-->
        <attr name="eShowClean" format="boolean" />
        <!--是否显示左侧icon-->
        <attr name="eShowLeft" format="boolean" />
        <!--是否隐藏背景-->
        <attr name="eShowBg" format="boolean" />
        <!--键盘按钮动作-->
        <attr name="eAction" format="integer">
            <enum name="none" value="0" />
            <enum name="search" value="1" />
            <enum name="next" value="2" />
            <enum name="done" value="3" />
        </attr>
        <!--输入类型-->
        <attr name="eInputType" format="integer">
            <enum name="text" value="0" />
            <enum name="password" value="1" />
            <enum name="phone" value="2" />
            <enum name="number" value="3" />
        </attr>
        <attr name="eMaxLength" format="integer" />
        <attr name="eMaxLines" format="integer" />
    </declare-styleable>
    <!--    通用TabLayout-->
    <declare-styleable name="TabLayout">
        <attr name="tabLayoutTextColorSelector" format="color|reference" />
        <attr name="tabLayoutTextSize" format="dimension" />
        <attr name="tabLayoutBackgroundSelector" format="color|reference" />
        <attr name="tabLayoutGravity" format="integer" />
        <!--        设置元素的上下左右的drawable-->
        <attr name="tabLayoutLeftDrawable" format="color|reference" />
        <attr name="tabLayoutRightDrawable" format="color|reference" />
        <attr name="tabLayoutTopDrawable" format="color|reference" />
        <attr name="tabLayoutBottomDrawable" format="color|reference" />
        <!--        设置元素怒上下左右的margin-->
        <attr name="tabLayoutMarginLeft" format="dimension" />
        <attr name="tabLayoutMarginRight" format="dimension" />
        <attr name="tabLayoutMarginTop" format="dimension" />
        <attr name="tabLayoutMarginBottom" format="dimension" />
        <!--        设置元素的上下左右的padding-->
        <attr name="tabLayoutPaddingLeft" format="dimension" />
        <attr name="tabLayoutPaddingRight" format="dimension" />
        <attr name="tabLayoutPaddingTop" format="dimension" />
        <attr name="tabLayoutPaddingBottom" format="dimension" />
        <!--        设置元素的宽度-->
        <attr name="tabLayoutWidth" format="dimension" />
        <!--        设置元素的高度-->
        <attr name="tabLayoutHeight" format="dimension" />
        <!--        顶部带图标的tab-->
        <attr name="top_drawable" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="SlideLayout">
        <attr name="percent" format="float" />
        <attr name="duration" format="integer" />
        <attr name="default_panel" format="enum">
            <enum name="front" value="0" />
            <enum name="behind" value="1" />
        </attr>
    </declare-styleable>

    <!--横向多功能View封装-->
    <declare-styleable name="MultipleItemView">
        <attr name="leftTextColor" format="color" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightIcon" format="reference" />
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="showTopLine" format="boolean" />
        <attr name="showBottomLine" format="boolean" />
        <attr name="showLeftIcon" format="boolean" />
        <attr name="showRightIcon" format="boolean" />
        <attr name="showEdtText" format="boolean" />
    </declare-styleable>


    <!--加减控件View-->
    <declare-styleable name="CountClickView">
        <!--最大值-->
        <attr name="ccvMax" format="integer" />
        <!--最小值-->
        <attr name="ccvMin" format="integer" />
        <!--当前值-->
        <attr name="ccvCurrent" format="integer" />
        <!--是否可输入-->
        <attr name="ccvInput" format="boolean" />
        <!--文字颜色-->
        <attr name="ccvTextColor" format="color|reference" />
        <!--文字大小-->
        <attr name="ccvTextSize" format="dimension" />
        <!--增加按钮资源-->
        <attr name="ccvAddIcon" format="reference" />
        <!--减少按钮资源-->
        <attr name="ccvMinus" format="reference" />
    </declare-styleable>
</resources>